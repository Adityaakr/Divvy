# Divvy Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Privy Configuration (for Web3 authentication)
EXPO_PUBLIC_PRIVY_APP_ID=your_privy_app_id_here
EXPO_PUBLIC_PRIVY_CLIENT_ID=your_privy_client_id_here

# Yellow/ClearNode Configuration (for state channels)
EXPO_PUBLIC_YELLOW_ENABLED=true
EXPO_PUBLIC_CLEARNODE_URL=wss://clearnet.yellow.com/ws
EXPO_PUBLIC_PRIVATE_KEY=your_private_key_here_DO_NOT_COMMIT
EXPO_PUBLIC_NETWORK=arbitrum
EXPO_PUBLIC_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc
EXPO_PUBLIC_APP_NAME=Divvy
EXPO_PUBLIC_SCOPE=app.divvy.mobile
EXPO_PUBLIC_ACCOUNT_ADDRESS=your_account_address_here

# Network Configuration - Arbitrum Sepolia for PYUSD support
EXPO_PUBLIC_CHAIN_ID=421614
EXPO_PUBLIC_ARBITRUM_SEPOLIA_RPC=https://sepolia-rollup.arbitrum.io/rpc
EXPO_PUBLIC_ARBITRUM_SEPOLIA_CHAIN_ID=421614

# App Configuration
EXPO_PUBLIC_APP_SCHEME=divvy
EXPO_PUBLIC_DEEP_LINK_PREFIX=divvy://

# ASI Savings Configuration
EXPO_PUBLIC_SAVINGS_ENABLED=true
EXPO_PUBLIC_SAVINGS_ADAPTER=AaveV3Arbitrum
EXPO_PUBLIC_SAVINGS_MAX_LEVERAGE=1.10
EXPO_PUBLIC_VOL_SOURCE=mock

# Blockscout Configuration - Arbitrum Sepolia
EXPO_PUBLIC_BLOCKSCOUT_BASE=https://arbitrum-sepolia.blockscout.com
EXPO_PUBLIC_BLOCKSCOUT_API=https://arbitrum-sepolia.blockscout.com/api/v2
EXPO_PUBLIC_BLOCKSCOUT_CHAIN_NAME=Arbitrum Sepolia
EXPO_PUBLIC_API_BASE=http://localhost:3001
