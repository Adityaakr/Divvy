# Safe Settle Now - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file - it contains sensitive information

# ==========================================
# BLOCKCHAIN NETWORK CONFIGURATION
# ==========================================

# Primary Network - Ethereum Sepolia Testnet
EXPO_PUBLIC_NETWORK=ethereum-sepolia
EXPO_PUBLIC_CHAIN_ID=11155111
EXPO_PUBLIC_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Alternative RPC Endpoints (for failover)
EXPO_PUBLIC_ETHEREUM_SEPOLIA_RPC=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID
EXPO_PUBLIC_ETHEREUM_SEPOLIA_CHAIN_ID=11155111

# ==========================================
# PYUSD SMART CONTRACT CONFIGURATION
# ==========================================

# PYUSD Token Contract on Sepolia
EXPO_PUBLIC_PYUSD_CONTRACT=0xCaC524BcA292aaade2DF8A05cC58F0a65B1B3bB9

# Smart Wallet Addresses (replace with your addresses)
EXPO_PUBLIC_SMART_WALLET_ADDRESS=your_smart_wallet_address_here
EXPO_PUBLIC_ACCOUNT_ADDRESS=your_wallet_address_here

# ==========================================
# BLOCKSCOUT ANALYTICS INTEGRATION
# ==========================================

# Blockscout API for transaction monitoring and analytics
EXPO_PUBLIC_BLOCKSCOUT_BASE=https://eth-sepolia.blockscout.com
EXPO_PUBLIC_BLOCKSCOUT_API=https://eth-sepolia.blockscout.com/api/v2
EXPO_PUBLIC_BLOCKSCOUT_CHAIN_NAME=Ethereum Sepolia

# ==========================================
# YELLOW NETWORK MESH CONFIGURATION
# ==========================================

# Yellow Network for gasless transactions
EXPO_PUBLIC_YELLOW_ENABLED=true
EXPO_PUBLIC_CLEARNODE_URL=wss://clearnet.yellow.com/ws

# ==========================================
# ASI SAVINGS AGENT CONFIGURATION
# ==========================================

# AI-powered yield optimization settings
EXPO_PUBLIC_SAVINGS_ENABLED=true
EXPO_PUBLIC_SAVINGS_ADAPTER=AaveV3Ethereum
EXPO_PUBLIC_SAVINGS_MAX_LEVERAGE=1.10

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================

# App Identity
EXPO_PUBLIC_APP_NAME=Safe Settle Now
EXPO_PUBLIC_APP_SCHEME=safesettlenow
EXPO_PUBLIC_DEEP_LINK_PREFIX=safesettlenow://

# API Configuration
EXPO_PUBLIC_API_BASE=http://localhost:3001

# ==========================================
# SECURITY KEYS (KEEP PRIVATE!)
# ==========================================

# WARNING: Never commit these values to version control
# These are for development/testing only - use secure key management in production

# Private key for transaction signing (NEVER commit the real key)
EXPO_PUBLIC_PRIVATE_KEY=your_private_key_here_NEVER_COMMIT_REAL_KEY

# Account Abstraction Configuration (ERC-4337)
EXPO_PUBLIC_BUNDLER_URL=https://api.stackup.sh/v1/node/YOUR_STACKUP_API_KEY
EXPO_PUBLIC_ENTRYPOINT_ADDRESS=0x5FF137D4b0FDCD49DcA30c7CF57E578a026d2789

# Optional: Paymaster for gasless transactions
EXPO_PUBLIC_PAYMASTER_URL=your_paymaster_url_here_optional

# ==========================================
# DEVELOPMENT & TESTING
# ==========================================

# Enable development features
EXPO_PUBLIC_DEV_MODE=false
EXPO_PUBLIC_ENABLE_LOGGING=true

# Testing configuration
EXPO_PUBLIC_TEST_MODE=false
